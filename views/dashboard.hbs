<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/logo2.png" />
    {{#if title}}
      <title>Student MS | {{title}}</title>
    {{/if}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <div class="dashboard">
      {{! navbar }}
      <nav class="sidenav">
        <img src="/img/logo.png" alt="" />
        <div class="navbar">
          <div class="links">
            <a href="/dashboard" class="linkedIcon {{dashboard1}}">
              <i class="bi bi-box"></i>
              <span href="">Dashboard</span>
            </a>
            <a href="/student" class="linkedIcon {{student1}}">
              <i class="bi bi-person-add"></i>
              <span href="">Add Student</span>
            </a>
            <a href="/account" class="linkedIcon {{account1}}">
              <i class="bi bi-person-gear"></i>
              <span href="">Account</span>
            </a>
            <a href="/report" class="linkedIcon {{report1}}">
              <i class="bi bi-envelope-exclamation"></i>
              <span href="">Report Bug</span>
            </a>
          </div>
          <a
            href="/login"
            onclick="return confirm('Are you sure you want to logout?')"
            class="Logout"
          >
            <i class="bi bi-box-arrow-left"></i>
            <span href="">Logout</span>
          </a>
        </div>
      </nav>
      {{! end of navbar }}

      {{! dashboard }}
      <div class="content">
        <h2 style="border-bottom: 1px solid #e0e2da; padding-bottom:10px"><span
          >Hey, </span>
          John Doe
        </h2>
        {{#if dashboard}}
          <h5 class="my-3">Student Management System</h5>
          <div class="dashboard-view">
            <div class="dashboard-items bg-primary text-white">
              <i class="bi bi-people"></i>
              <div class="dashboard-items-info">
                <p>Total students</p>
                <span>{{dashboardData.length}}</span>
              </div>
            </div>
            <div class="dashboard-items bg-info text-white">
              <i class="bi bi-person-check"></i>
              <div class="dashboard-items-info">
                <p>Enrolled</p>
                <span>{{enrolled}}</span>
              </div>
            </div>
            <div class="dashboard-items bg-danger text-white">
              <i class="bi bi-person-dash"></i>
              <div class="dashboard-items-info">
                <p>Not enrolled</p>
                <span>{{notEnrolled}}</span>
              </div>
            </div>
            {{! <div class="dashboard-items bg-success text-white">
              <i class="bi bi-person-add"></i>
              <div class="dashboard-items-info">
                <p>New students</p>
                <span>0</span>
              </div>
            </div> }}
          </div>
          <h4 class="my-3">List of students</h4>
          <div class="table-container">
            {{#if message}}
              <h5 class="alert {{alert}}">{{message}}</h5>
            {{/if}}
            <table class="table table-hover">
              <thead class="thead table-primary">
                <tr>
                  <th>ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Gender</th>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody class="tbody">
                {{#each dashboardData}}
                  <tr>
                    <td>0{{this.student_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.gender}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.student_status}}</td>
                    <td><a
                        class="text-success"
                        style="margin-right:10px; font-size:large;"
                        href="/auth/edit-student/{{this.student_id}}"
                      ><i class="bi bi-pencil-square"></i></a>
                      <a
                        onclick="return confirm('Are you sure you want to delete this student?')"
                        class="text-danger"
                        style="margin-right:10px; font-size:large;"
                        href="/auth/delete-student/{{this.student_id}}"
                      ><i class="bi bi-trash"></i></a></td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        {{/if}}
        {{! view student }}
        {{#if viewStudent}}
          <h3 class="my-3">Edit Student's Information</h3>
          <div class="card p-3">
            {{#if message}}
              <h5 class="alert {{alert}}">{{message}}</h5>
            {{/if}}
            <form action="/auth/update-student" method="post" id="viewStudent">
              <div>
                <label class="form-label" for="student_id">Student ID</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="student_id"
                  id="student_id"
                  value="{{viewStudentData.student_id}}"
                  readonly
                />
              </div>
              <div>
                <label class="form-label" for="gender">Gender</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="gender"
                  id="gender"
                  value="{{viewStudentData.gender}}"
                />
              </div>
              <div>
                <label class="form-label" for="first_name">First Name</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="first_name"
                  id="first_name"
                  value="{{viewStudentData.first_name}}"
                />
              </div>
              <div>
                <label class="form-label" for="last_name">Last Name</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="last_name"
                  id="last_name"
                  value="{{viewStudentData.last_name}}"
                />
              </div>
              <div>
                <label class="form-label" for="address">Address</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="address"
                  id="address"
                  value="{{viewStudentData.address}}"
                />
              </div>
              <div>
                <label class="form-label" for="phone">Phone Number</label>
                <input
                  class="form-control mb-2"
                  type="number"
                  name="phone"
                  id="phone"
                  value="{{viewStudentData.phone}}"
                />
              </div>
              <div>
                <label class="form-label" for="email">Email</label>
                <input
                  class="form-control mb-2"
                  type="email"
                  name="email"
                  id="email"
                  value="{{viewStudentData.email}}"
                />
              </div>
              <div>
                <label class="form-label" for="status_name">Status</label>
                <input
                  class="form-control mb-2"
                  type="text"
                  name="student_status"
                  id="student_status"
                  value="{{viewStudentData.student_status}}"
                />
              </div>
              <div><button type="submit" class="btn btn-success">Save</button>
              </div>
            </form>
          </div>
        {{/if}}

        {{! add students }}
        {{#if student}}
          <div class="studentTitle">
            <h3 class="my-3">Add Student</h3>
            <a href="/pending" class="nav-link text-primary">View pending
              students</a></div>
          <div class="card p-3">
            {{#if message}}
              <h5 class="alert {{alert}}">{{message}}</h5>
            {{/if}}
            <form action="/auth/add-student" method="post" id="addStudent">
              <div>
                <label class="form-label" for="first_name">First Name</label>
                <input
                  class="form-control"
                  type="text"
                  name="first_name"
                  id="first_name"
                  placeholder="Enter first name"
                />
              </div>
              <div>
                <label class="form-label" for="last_name">Last Name</label>
                <input
                  class="form-control"
                  type="text"
                  name="last_name"
                  id="last_name"
                  placeholder="Enter last name"
                />
              </div>
              <div>
                <label class="form-label" for="gender">Gender</label><br />
                <input type="radio" name="gender" id="gender" value="Male" />
                <span>Male</span>
                <input type="radio" name="gender" id="gender" value="Female" />
                <span>Female</span>
              </div>
              <div>
                <label class="form-label" for="address">Address</label>
                <input
                  class="form-control"
                  type="text"
                  name="address"
                  id="address"
                  placeholder="Enter address"
                />
              </div>
              <div>
                <label class="form-label" for="phone">Phone</label>
                <input
                  class="form-control"
                  type="number"
                  name="phone"
                  id="phone"
                  placeholder="Enter phone number"
                />
              </div>
              <div>
                <label class="form-label" for="email">Email</label>
                <input
                  class="form-control"
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Enter email"
                />
              </div>
              <div>
                <label for="student_status">Status</label>
                <select
                  class="form-select"
                  name="student_status"
                  id="student_status"
                >
                  <option value="">Select student status</option>
                  <option value="Enrolled">Enrolled</option>
                  <option value="Not Enrolled">Not Enrolled</option>
                </select>
              </div>
              <div></div>
              <div>
                <button type="submit" class="btn btn-primary">Add student</button>
              </div>
            </form>
          </div>
        {{/if}}
        {{! end of add student }}

        {{! Pending }}
        {{#if pending}}
          <div class="pending">
            <img
              width="50%"
              src="/img/construction.png"
              alt="This page is under construction"
            />
          </div>
        {{/if}}
        {{! end of pending }}

        {{! account }}
        {{#if account}}
          <h3 class="my-3">Account Details</h3>
          <div class="account">
            <div><img width="90%" src="/img/profile.png" alt="" /></div>
            <div class="card p-3">
              <form action="">
                <div>
                  <label class="form-label" for="first_name">First Name</label>
                  <input
                    class="form-control"
                    type="text"
                    name="first_name"
                    id="first_name"
                    value="John"
                    readonly
                  />
                </div>
                <div class="mt-2">
                  <label class="form-label" for="last_name">Last Name</label>
                  <input
                    class="form-control"
                    type="text"
                    name="last_name"
                    id="last_name"
                    value="Doe"
                    readonly
                  />
                </div>
                <div class="mt-2">
                  <label class="form-label" for="user_email">Email</label>
                  <input
                    class="form-control"
                    type="text"
                    name="user_email"
                    id="user_email"
                    value="user1@gmail.com"
                    readonly
                  />
                </div>
                {{! <div class="mt-2">
                  <label class="form-label" for="user_name">Username</label>
                  <input
                    class="form-control"
                    type="text"
                    name="user_name"
                    id="user_name"
                    value="user1"
                    readonly
                  />
                </div> }}
                <div class="mt-2">
                  <label class="form-label" for="user_password">Password</label>
                  <input
                    class="form-control"
                    type="text"
                    name="user_password"
                    id="user_password"
                    value="user1"
                    readonly
                  />
                </div>
                <button
                  type="submit"
                  class="form-control mt-2 btn btn-primary"
                >Save</button>
              </form>
            </div>
          </div>
        {{/if}}
        {{! end of account }}

        {{! report }}
        {{#if report}}
          <h3>Report Bugs</h3>
          <div class="report">
            <div class="card p-3">
              <form action="">
                <div>
                  <label class="form-label" for="full_name">Full Name</label>
                  <input
                    class="form-control"
                    type="text"
                    name="full_name"
                    id="full_name"
                    placeholder="E.g : 'John Doe'"
                  />
                </div>
                <div class="mt-3">
                  <label class="form-label" for="subject">Subject</label>
                  <input
                    class="form-control"
                    type="text"
                    name="subject"
                    id="subject"
                    placeholder="Enter the subject"
                  />
                </div>
                <div class="mt-3">
                  <label class="form-label" for="message">Message</label>
                  <textarea
                    rows="5"
                    class="form-control"
                    name="message"
                    id="message"
                    placeholder="Your message here..."
                  ></textarea>
                </div>
                <button
                  type="submit"
                  class="form-control btn btn-primary mt-3"
                >Send message</button>
              </form>
            </div>
            <div class="contact">
              <h2>Our contact information</h2>
              <p>Fill up the form or reach out to us via :</p>
              <ul>
                <li><a href=""><i class="bi bi-telephone"></i>
                    (123) 456-789</a></li>
                <li><a href=""><i class="bi bi-envelope"></i>
                    schoolofschool@gmail.com</a></li>
                <li><a href=""><i class="bi bi-geo-alt"></i>
                    Malolos, Bulacan</a></li>
              </ul>
            </div>
          </div>
        {{/if}}
        {{! end of report }}
      </div>
      {{! end of content }}
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>