<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/img/logo2.png" />
    <title>Student MS | Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <div class="loginForm">
      <h1>Student MS</h1>
      <div class="card p-3">
        <h3 class="text-center p-3 border-bottom">Login
          <span><i class="bi bi-box-arrow-in-right"></i></span></h3>
        <div class="card-body">
          <div class="demo border-bottom">
            <h6>Demo Account</h6>
            <p>Email :
              <span>user1@gmail.com</span>
              Pass :
              <span>user1</span></p>
          </div>
          {{#if message}}
            <h5 class="alert {{alert}}">{{message}}</h5>
          {{/if}}
          <form method="post" class="mt-3" action="/auth/login">
            {{! <label class="form-label" for="email">Email</label> }}
            <input
              class="form-control"
              type="email"
              name="user_email"
              id="user_email"
              placeholder="Enter email"
            />
            {{! <label class="form-label mt-3" for="password">Password</label> }}
            <input
              class="form-control mt-3"
              type="password"
              name="user_password"
              id="user_password"
              placeholder="Enter password"
            />
            <button
              type="submit"
              class="btn btn-info form-control mt-3"
            >Login</button>
          </form>
        </div>
        <div class="card-footer">
          <a href="">Forgot password?</a>
          <p>Don't have an account?
            <a href="/register">Register</a></p>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>